<Window x:Class="systProgrTask.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:systProgrTask"
        mc:Ignorable="d"
        Title="MainWindow" Height="344" Width="315">
    <Grid Background="#FF0F5F9C" Margin="0,0,0,-6">
        <Label Content="Enter program name to run" HorizontalAlignment="Left" Height="36" Margin="40,44,0,0" VerticalAlignment="Top" Width="241" Foreground="White" FontFamily="Microsoft JhengHei" FontWeight="Bold" FontSize="17"/>
        <TextBox Name="ProgramNameTextBox" HorizontalAlignment="Left" Height="37" Margin="40,117,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="239" FontSize="16"/>
        <Button Content="Run" HorizontalAlignment="Left" Height="39" Margin="128,208,0,0" VerticalAlignment="Top" Click="Button_Click" Width="62" FontSize="14" FontWeight="Bold" BorderBrush="#FF532EEA" Foreground="Black" Background="#FFA691DD"/>
    </Grid>
</Window>
